{
  "manifest_version": 3,
  "name": "QuickSide Tools",
  "version": "2.0",
  "description": "Sidebar with PDF merger, image compressor, and resizer tools",
  "permissions": ["activeTab", "storage", "sidePanel"],
  "action": {
    "default_title": "QuickSide Tools",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}